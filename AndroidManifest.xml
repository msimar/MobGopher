<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.univ.helsinki.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".sensor.AmbientTemperatureSensor"
            android:label="@string/activity_title_sensor" >
        </activity>
        <activity
            android:name=".sensor.PressureSensor"
            android:label="@string/activity_title_sensor" >
        </activity>
        <activity
            android:name=".sensor.AccelerometerSensorActivity"
            android:label="@string/activity_title_sensor" >
        </activity>
        <activity
            android:name=".sensor.SensorListActivity"
            android:label="@string/activity_title_sensor" >
        </activity>
        <activity
            android:name=".MainSensorActivity"
            android:label="@string/activity_title_sensor" >
        </activity>
        
        <activity
            android:name=".MainActivity"
            android:label="@string/activity_title_sensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".sensor.BarometerSensorActivity"
            android:label="@string/activity_title_sensor" >
        </activity>
        <activity
            android:name=".sensor.LocationActivity"
            android:label="@string/activity_title_sensor" >
        </activity>

        <service android:name="LocationService" >
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>